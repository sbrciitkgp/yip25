<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YIP Themes</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-950 text-white font-sans">

    <nav
      class="sticky flex top-0 z-50 justify-between items-center p-4 bg-gray-700 max-w-screen"
    >
      <%- include('partials/navbar') %>
    </nav>


    <section class="container mx-auto px-6 mt-10 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold">Themes</h1>
      <p class="text-gray-300 mt-2">
        Explore innovative ideas shaping the future
      </p>
    </section>

    <section class="flex justify-center mt-6">
      <div
        class="relative w-full md:w-3/4 lg:w-2/3 aspect-video overflow-hidden rounded-2xl shadow-2xl"
      >
       
        <div
          id="slider"
          class="flex transition-transform duration-700 ease-in-out h-full"
        >
          
          <div class="flex-shrink-0 w-full relative">
            <img
              src="https://yip2024.vercel.app/images/theme-image-1.png"
              class="w-full h-full object-cover"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent p-6 z-10"
            >
              <h2 class="text-2xl font-bold text-white">
                New Generation Transportation
              </h2>
              <p class="text-gray-200 text-sm mt-1">
                Innovating eco-friendly, faster, and fuel-efficient transport
                solutions.
              </p>
            </div>
          </div>

          
          <div class="flex-shrink-0 w-full relative">
            <img
              src="https://yip2024.vercel.app/images/theme-image-2.png"
              class="w-full h-full object-cover"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent p-6 z-10"
            >
              <h2 class="text-2xl font-bold text-white">Sustainable Energy</h2>
              <p class="text-gray-200 text-sm mt-1">
                Harnessing renewable resources for a cleaner tomorrow.
              </p>
            </div>
          </div>

          
          <div class="flex-shrink-0 w-full relative">
            <img
              src="https://yip2024.vercel.app/images/theme-image-3.png"
              class="w-full h-full object-cover"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent p-6 z-10"
            >
              <h2 class="text-2xl font-bold text-white">Smart Healthcare</h2>
              <p class="text-gray-200 text-sm mt-1">
                Improving patient care with technology-driven solutions.
              </p>
            </div>
          </div>

         
          <div class="flex-shrink-0 w-full relative">
            <img
              src="https://yip2024.vercel.app/images/theme-image-4.png"
              class="w-full h-full object-cover"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent p-6 z-10"
            >
              <h2 class="text-2xl font-bold text-white">Digital Education</h2>
              <p class="text-gray-200 text-sm mt-1">
                Creating smarter learning experiences for the future generation.
              </p>
            </div>
          </div>
        </div>

       
        <button
          id="prev"
          class="absolute top-1/2 left-4 -translate-y-1/2 bg-black/50 text-white p-2 rounded-full hover:bg-black/70 z-20"
        >
          &#10094;
        </button>
        <button
          id="next"
          class="absolute top-1/2 right-4 -translate-y-1/2 bg-black/50 text-white p-2 rounded-full hover:bg-black/70 z-20"
        >
          &#10095;
        </button>

       
        <div
          class="absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2 z-20"
        >
          <span
            class="dot w-3 h-3 bg-white/60 rounded-full cursor-pointer"
          ></span>
          <span
            class="dot w-3 h-3 bg-white/60 rounded-full cursor-pointer"
          ></span>
          <span
            class="dot w-3 h-3 bg-white/60 rounded-full cursor-pointer"
          ></span>
          <span
            class="dot w-3 h-3 bg-white/60 rounded-full cursor-pointer"
          ></span>
        </div>
      </div>
    </section>

    
    <section class="container mx-auto px-6 mt-16 text-center">
      <h2 class="text-3xl md:text-4xl font-bold">Why Participate?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-10">
        <!-- Card 1 -->
        <div
          class="bg-gray-800 p-8 rounded-2xl shadow-lg hover:scale-105 transition-transform"
        >
          <h3 class="text-xl font-bold text-teal-400">Innovation</h3>
          <p class="text-gray-300 mt-2">
            Showcase your creativity by solving real-world problems.
          </p>
        </div>
        <!-- Card 2 -->
        <div
          class="bg-gray-800 p-8 rounded-2xl shadow-lg hover:scale-105 transition-transform"
        >
          <h3 class="text-xl font-bold text-teal-400">Learning</h3>
          <p class="text-gray-300 mt-2">
            Gain hands-on experience with new technologies and teamwork.
          </p>
        </div>
        <!-- Card 3 -->
        <div
          class="bg-gray-800 p-8 rounded-2xl shadow-lg hover:scale-105 transition-transform"
        >
          <h3 class="text-xl font-bold text-teal-400">Recognition</h3>
          <p class="text-gray-300 mt-2">
            Get recognized for your innovative solutions on a big platform.
          </p>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="mt-10">
        <button
          class="px-8 py-3 bg-teal-500 hover:bg-teal-600 rounded-full shadow-lg text-lg font-semibold"
        >
          Register Now
        </button>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-950 mt-16 text-center text-gray-400">
      <%- include('partials/footer') %>
    </footer>

    <script>
      const slider = document.getElementById("slider");
      const slides = slider.children;
      const dots = document.querySelectorAll(".dot");
      let index = 0;

      function showSlide(i) {
        index = (i + slides.length) % slides.length;
        const slideWidth = slides[0].offsetWidth; 
        slider.style.transform = `translateX(-${index * slideWidth}px)`;
        dots.forEach((dot, idx) => {
          dot.classList.toggle("bg-white", idx === index);
          dot.classList.toggle("bg-white/60", idx !== index);
        });
      }

      // Auto slide
      let interval = setInterval(() => showSlide(index + 1), 4000);

      // Event listeners
      document.getElementById("next").addEventListener("click", () => {
        showSlide(index + 1);
        resetInterval();
      });
      document.getElementById("prev").addEventListener("click", () => {
        showSlide(index - 1);
        resetInterval();
      });
      dots.forEach((dot, idx) => {
        dot.addEventListener("click", () => {
          showSlide(idx);
          resetInterval();
        });
      });

      function resetInterval() {
        clearInterval(interval);
        interval = setInterval(() => showSlide(index + 1), 4000);
      }

      // Initialize
      showSlide(index);

      // Make slider responsive
      window.addEventListener("resize", () => showSlide(index));
    </script>
  </body>
</html>
