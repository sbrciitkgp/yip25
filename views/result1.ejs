    <script>
        let currentRound = 1;
        let currentDivision = "junior";

        function updateDisplay() {
            document.querySelectorAll(".section").forEach(sec => sec.classList.add("hidden"));
            const id = `${currentDivision}-round${currentRound}`;
            document.getElementById(id).classList.remove("hidden");

            document.querySelectorAll(".round-btn").forEach((btn, idx) => {
                btn.classList.toggle("bg-purple-600", idx + 1 === currentRound);
                btn.classList.toggle("text-white", idx + 1 === currentRound);
                btn.classList.toggle("border-purple-600", idx + 1 === currentRound);
            });

            document.querySelectorAll(".div-btn").forEach(btn => {
                const isJunior = currentDivision === "junior" && btn.textContent.includes("Junior");
                const isSenior = currentDivision === "senior" && btn.textContent.includes("Senior");
                btn.classList.toggle("bg-blue-500", isJunior || isSenior);
                btn.classList.toggle("text-white", isJunior || isSenior);
                btn.classList.toggle("border-blue-500", isJunior || isSenior);
            });
        }

        function setRound(round) {
            currentRound = round;
            updateDisplay();
        }

        function setDivision(div) {
            currentDivision = div;
            updateDisplay();
        }

        updateDisplay();
    </script>
