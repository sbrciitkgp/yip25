  /* ---------- Testimonial Slider ---------- */
  #testimonial {
    text-align: center;
    color: #263339;
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    margin: 40px 0 20px;
  }

  .testimonial-container {
    width: 80%;
    margin: 0 auto;
    overflow: hidden;
  }

  .testimonial-slider {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .testimonial-slide {
    flex: 0 0 100%;
    text-align: center;
    font-family: "Poppins", sans-serif;
    padding: 15px;
  }

  .testimonial-slide img {
    width: 470px;
    height: 300px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 15px;
  }

  .testimonial-slide h3 {
    font-size: 22px;
    margin: 0 0 9px;
  }

  .testimonial-slide p {
    max-width: 380px;
    font-size: 14px;
    margin: 0 auto;
  }

  .testimonial-slide .client {
    margin: 15px 0;
    font-style: italic;
  }

  /* ---------- Gallery Slider ---------- */
  .gallery {
    text-align: center;
    margin: 20px 0;
    font-family: "Montserrat", sans-serif;
    font-weight: 600;
    font-size: 28px;
  }

  .gallery-container {
    width: 700px;
    height: 400px;
    margin: auto;
    position: relative;
    overflow: hidden;
  }

  .gallery-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease;
  }

  .gallery-slide.active {
    opacity: 1;
    z-index: 1;
  }

  .gallery-slide img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    object-fit: cover;
  }

  .gallery-btn {
    position: absolute;
    top: 50%;
    width: 30px;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    padding: 10px;
    cursor: pointer;
    z-index: 2;
  }

  .gallery-btn.prev {
    left: 10px;
  }

  .gallery-btn.next {
    right: 10px;
  }

  /* ---------- Query Section ---------- */
  .query-section {
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
      url("assets/sbrc-2024-team.jpg") center/cover no-repeat;
    padding: 40px 20px;
    display: flex;
    justify-content: center;
    color: #fff;
  }

  .query-box {
    width: 100%;
    max-width: 600px;
  }

  .tag {
    display: block;
    width: 120px;
    background-color: #26a69a;
    color: white;
    padding: 11px 14px;
    border-radius: 3px;
    font-size: 15px;
    margin: 0 auto 10px auto;
    text-align: center;
  }

  .query-box h1 {
    margin-bottom: 20px;
    text-align: center;
    font-family: "Poppins", sans-serif;
    font-size: 28px;
    font-weight: 600;
  }

  input,
  textarea {
    width: 100%;
    padding: 9px;
    margin-bottom: 15px;
    border: none;
    border-radius: 5px;
    font-size: 14px;
  }

  .input-row {
    display: flex;
    gap: 10px;
  }

  .input-row input {
    flex: 1;
  }

  button {
    width: 30%;
    padding: 13px;
    background-color: #26a69a;
    color: white;
    border: none;
    font-size: 14px;
    border-radius: 5px;
    cursor: pointer;
    display: block;
    margin: 0 auto;
  }

  button:hover {
    background-color: #078276;
  }

  @media (max-width: 600px) {
    .testimonial-slide img {
      width: 100%;
      height: auto;
    }
    .gallery-container {
      width: 95%;
      height: auto;
    }
    .input-row {
      flex-direction: column;
    }
  }
</style>

