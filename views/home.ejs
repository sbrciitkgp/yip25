  <link rel="stylesheet" href="/CSS/home.css">
  <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Libertinus+Serif:wght@600&family=Poppins:wght@500&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

        * {
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .query-section {
            background: url('assets/sbrc-2024-team.jpg') no-repeat center center/cover;
            padding: 40px 20px;
            display: flex;
            justify-content: center;
            background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('assets/sbrc-2024-team.jpg');
            background-size: cover;
            background-position: center;
        }

        .tag {
            display: block;
            width: 20%;
            background-color: #26a69a;
            color: white;
            padding: 11px 14px;
            border-radius: 3px;
            font-size: 15px;
            margin: 0px auto 10px auto;
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
            color: #d0ebea;
            text-align: center;
            font-family: "Poppins", sans-serif;
            font-size: 35px;
            font-weight: 600;
            font-style: normal;
        }

        input,
        textarea {
            width: 100%;
            padding: 9px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
            font-size: 12px;
            background: white;
        }

        .input-row {
            display: flex;
            gap: 10px;
        }

        .input-row input {
            flex: 1;
        }

        textarea {
            resize: vertical;
        }

        button {
            width: 30%;
            padding: 13px;
            background-color: #26a69a;
            color: white;
            border: none;
            font-size: 12px;
            border-radius: 5px;
            cursor: pointer;
            display: block;
            margin: 0 auto;
        }

        button:hover {
            background-color: #078276;
        }

        @media (max-width: 500px) {
            .input-row {
                flex-direction: column;
            }
        }

         @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Libertinus+Serif:wght@600&family=Poppins&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Libertinus+Serif:wght@600&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

    #testimonial {
      text-align: center;
      color: #263339;
      font-family: "Poppins", sans-serif;
      font-weight: 600;
      font-style: normal;
    }

    .slider-container {
      width: 80%;
      margin: 0px auto;
      overflow: hidden;
    }

    .slider {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }

    .slide {
      flex: 0 0 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
      font-weight: 400;
      font-style: normal;
    }

    .slide img {
      width: 470px;
      height: 300px;
      object-fit: cover;
      border-radius: 10px;
      display: block;
      margin-bottom: 15px;
    }

    .slide p {
      max-width: 380px;
      text-align: center;
      font-size: 14px;
      word-wrap: break-word;
      white-space: normal;
      margin: 0 auto;
    }

    .slide .client {
      margin: 22px 0px;
    }

    @media (max-width: 600px) {
      .slider-container {
        width: 95%;
      }

      .slide img {
        width: 100%;
        height: auto;
      }

      .slide h3 {
        font-size: 18px !important;
      }

      .slide p {
        font-size: 13px;
        max-width: 90%;
      }

      .slide .client {
        font-size: 12px;
      }
    }

    @media (min-width: 601px) and (max-width: 900px) {
      .slider-container {
        width: 90%;
      }

      .slide img {
        width: 90%;
        height: auto;
      }

      .slide h3 {
        font-size: 20px !important;
      }

      .slide p {
        font-size: 14px;
        max-width: 85%;
      }
    }
    </style>
</head>
