<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>YIP - Sign Up</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
  </head>
  <body
    class="bg-gradient-to-br from-black to-gray-900 flex flex-col relative font-sans"
  >
    <% if (flashMessage) { %>
    <div
      id="flash"
      class="absolute top-4 right-4 bg-red-500 text-white px-4 py-2 rounded shadow-md z-50 transition-opacity duration-300"
    >
      <%= flashMessage %>
    </div>
    <script>
      setTimeout(() => {
        const flash = document.getElementById("flash");
        if (flash) flash.style.opacity = "0";
      }, 3000); 
    </script>
    <% } %>
    <div class="fixed inset-0 z-0">
      <img
        src="/images/iitkgp.jpg"
        alt="IIT KGP"
        class="w-full h-full object-cover opacity-50"
      />
    </div>

    <section class="z-10 flex items-center justify-center min-h-screen">
      <div
        class="w-full max-w-2xl bg-white/20 backdrop-blur-md border border-white/20 rounded-2xl shadow-2xl p-10"
      >
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-black drop-shadow-md">
            Welcome to <span class="text-blue-800">YIP'26</span>
          </h1>
          <h3 class="text-lg text-gray-300 mt-2">Create your account</h3>
        </div>

        <form
          action="/user/create"
          method="POST"
          id="signupform"
          class="space-y-4"
        >
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <input
              type="text"
              placeholder="Team Name"
              name="TeamName"
              class="bg-white/10 text-black placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
            <input
              type="text"
              placeholder="Mentor Name"
              name="MentorName"
              class="bg-white/10 text-white placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
            <input
              type="email"
              placeholder="Mentor Email"
              name="MentorEmail"
              class="bg-white/10 text-white placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
            <input
              type="tel"
              placeholder="Mentor Phone No."
              name="MentorPhone"
              class="bg-white/10 text-white placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
            <input
              type="password"
              placeholder="Password"
              name="Password"
              id="pswd"
              class="bg-white/10 text-white placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
            <input
              type="password"
              placeholder="Confirm Password"
              name="cpassword"
              id="cnfpswd"
              class="bg-white/10 text-white placeholder-gray-300 px-4 py-2 rounded-md w-full outline-none border border-white/20 focus:ring-2 focus:ring-blue-400 transition"
              required
            />
          </div>

          <span id="error" class="text-red-400 text-md text-center"></span>

          <div class="flex flex-col items-center gap-2 pt-4">
            <button
              type="submit"
              class="w-[180px] bg-blue-600 hover:bg-blue-700 transition duration-200 px-4 py-2 rounded-full text-white font-semibold"
            >
              Register
            </button>
            <div class="flex gap-4">
              Already have an account?<a
                href="/login"
                class="text-blue-800 hover:text-blue-500 transition font-medium text-sm"
              >
                <span>Login here</span>
              </a>
            </div>
          </div>
        </form>
      </div>
    </section>
    <!-- Footer (visible on scroll) -->
    <footer class="z-10 w-full"><%- include('partials/footer') %></footer>
    <script src="/JS/signup.js" defer></script>
  </body>
</html>
