      <div class="relative">
        <button id="more-btn" class="hidden text-white bg-purple-600 px-3 py-1 rounded-lg">
          More ▾
        </button>
        <div id="more-menu" class="absolute right-0 mt-2 hidden bg-purple-900 text-white rounded shadow-lg">
          <!-- overflow items get appended here -->
        </div>
