    <script>
      const navList = document.getElementById("nav-list");
      const moreBtn = document.getElementById("more-btn");
      const moreMenu = document.getElementById("more-menu");

      function adjustNav() {
        const navItems = Array.from(navList.querySelectorAll(".nav-item"));
        moreMenu.innerHTML = ""; // clear dropdown first
        let availableWidth = navList.offsetWidth;
        let totalWidth = 0;

        navItems.forEach((item) => {
          item.classList.remove("hidden");
        });

        // If items overflow, move them into "More"
        for (let i = 0; i < navItems.length; i++) {
          const item = navItems[i];
          totalWidth += item.offsetWidth + 16; // add gap padding
          if (totalWidth > availableWidth) {
            // move this and the rest into dropdown
            for (let j = i; j < navItems.length; j++) {
              const hiddenItem = navItems[j];
              hiddenItem.classList.add("hidden");

              const clone = hiddenItem.cloneNode(true);
              clone.classList.remove("hidden", "nav-item");
              clone.classList.add("block", "px-4", "py-2", "hover:bg-purple-700");
              moreMenu.appendChild(clone);
            }
            break;
          }
        }

        // Show/Hide "More" button
        moreBtn.classList.toggle("hidden", moreMenu.children.length === 0);
      }

      // Toggle dropdown
      moreBtn.addEventListener("click", () => {
        moreMenu.classList.toggle("hidden");
      });

      window.addEventListener("resize", adjustNav);
      window.addEventListener("load", adjustNav);
    </script>
  </body>
